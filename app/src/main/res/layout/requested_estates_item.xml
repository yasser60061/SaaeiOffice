<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="10sp"
    app:cardCornerRadius="15sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/add_estate_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="8sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3sp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/requested_ads_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3sp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/price_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="-"
                                android:textColor="@color/green_for_app"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/currency_type_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingStart="5sp"
                                android:paddingEnd="5sp"
                                android:text="ريال"
                                android:textColor="@color/green_for_app"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/price_type_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingStart="10sp"
                                android:paddingEnd="10sp"
                                android:text=""
                                android:textColor="@color/green_for_app"
                                android:textSize="10sp" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3sp"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/as_map_icon"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/city_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="2sp"
                        android:text="-"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="2sp"
                        android:textColor="@color/dark_blue"
                        android:text="-"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/area_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2sp"
                        android:layout_gravity="center"
                        android:text="-"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/description_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="3sp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="-"
                    android:textSize="8sp" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:padding="10sp"
            >

            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rounded_button_blue"
                android:paddingStart="20sp"
                android:paddingTop="5sp"
                android:paddingEnd="20sp"
                android:paddingBottom="5sp"
                android:text="جديد"
                android:textColor="@color/white"
                android:textSize="8sp" />

<!--            <TextView-->
<!--                android:id="@+id/sent_contact_request_tv"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentBottom="true"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:background="@drawable/rounded_button_elementary1"-->
<!--                android:paddingStart="20sp"-->
<!--                android:paddingTop="5sp"-->
<!--                android:paddingEnd="20sp"-->
<!--                android:paddingBottom="5sp"-->
<!--                android:text="ارسال رسالة"-->
<!--                android:textAlignment="center"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="8sp"-->
<!--                android:visibility="invisible"-->
<!--                tools:visibility="visible" />-->

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

