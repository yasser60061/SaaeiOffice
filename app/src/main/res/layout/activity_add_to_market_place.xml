<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".ui.activities.addToMarketPlaceActivity.AddToMarketPlaceActivity">

    <RelativeLayout
        android:id="@+id/header_Relative"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/green_for_app"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/back_linear"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10sp"
            android:gravity="center">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/back_image" />


        </LinearLayout>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="إضافة مكتبك إلى المتجر"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/main_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/reject_reason_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_shape_with_red_border"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:padding="15sp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layoutDirection="rtl"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/reject_reason_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:textSize="12sp"
                         />

                    <TextView
                        android:id="@+id/reject_reason_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="3sp"
                        android:textAlignment="center"
                        android:textSize="12sp"
                         />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="رقم الحساب الدولي"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ipan_et"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/rounded_shape_with_green_border"
                    android:inputType="text"
                    android:paddingStart="15sp"
                    android:paddingEnd="15sp"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="العلامة التجارية باللغة العربية"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/brand_number_ar_et"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:background="@drawable/rounded_shape_with_green_border"
                    android:maxLength="40"
                    android:paddingStart="15sp"
                    android:paddingEnd="15sp"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="العلامة التجارية باللغة الانجليزية"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/brand_name_en_et"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:background="@drawable/rounded_shape_with_green_border"
                    android:maxLength="40"
                    android:paddingStart="15sp"
                    android:paddingEnd="15sp"
                    android:singleLine="true"
                    android:textSize="12sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="الإسم الأول"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/first_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:background="@drawable/rounded_shape_with_green_border"
                    android:maxLength="40"
                    android:paddingStart="15sp"
                    android:paddingEnd="15sp"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="لقب العائلة"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/family_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/rounded_shape_with_green_border"
                    android:inputType="text"
                    android:maxLength="20"
                    android:paddingStart="15sp"
                    android:paddingEnd="15sp"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="رقم الجوال"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="3sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/rounded_shape_with_green_border"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:paddingHorizontal="2sp">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/country_code_picker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5sp"
                        android:layout_weight="1"
                        app:ccp_clickable="false"
                        app:ccp_defaultNameCode="SA" />

                    <EditText
                        android:id="@+id/phone_number_et"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_gravity="center"
                        android:layout_margin="5sp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="5X XXX XXXX"
                        android:inputType="phone"
                        android:maxLength="9"
                        android:paddingStart="5sp"
                        android:paddingEnd="5sp"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="البريد الالكتروني"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/email_address_et"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/rounded_shape_with_green_border"
                    android:inputType="textEmailAddress"
                    android:paddingStart="15sp"
                    android:paddingEnd="15sp"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tax_number_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="الرقم الضريبي"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tax_number_et"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_margin="10sp"
                    android:background="@drawable/rounded_shape_with_green_border"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:maxLength="40"
                    android:paddingStart="15sp"
                    android:paddingEnd="12sp"
                    android:singleLine="true"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="رقم الترخيص"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/license_number_et"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:background="@drawable/rounded_shape_with_green_border"
                    android:inputType="text"
                    android:maxLength="40"
                    android:paddingStart="15sp"
                    android:paddingEnd="12sp"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="تاريخ إصدار الترخيص"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/license_issuing_date_et"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_margin="10sp"
                    android:background="@drawable/rounded_shape_with_green_border"
                    android:gravity="center_vertical"
                    android:paddingStart="15sp"
                    android:paddingEnd="12sp"
                    android:singleLine="true"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="تاريخ إنتهاء الترخيص"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/license_expired_date_et"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_margin="10sp"
                    android:background="@drawable/rounded_shape_with_green_border"
                    android:gravity="center_vertical"
                    android:paddingStart="15sp"
                    android:paddingEnd="12sp"
                    android:singleLine="true"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="صور الترخيص"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/license_images_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="6"
                    tools:listitem="@layout/license_images_item" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="نوع الهوية"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/ids_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10sp"
                    android:background="@drawable/rounded_shape_with_green_border"
                    android:orientation="horizontal"
                    android:paddingStart="5sp">

                    <RadioButton
                        android:id="@+id/identity_card_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="20sp"
                        android:text="بطاقة هوية"
                        android:textSize="11sp" />

                    <RadioButton
                        android:id="@+id/passport_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="20sp"
                        android:text="جواز سفر"
                        android:textSize="11sp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/id_issuing_date_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="تاريخ إصدار بطاقة الهوية"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/id_issuing_date_et"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_margin="10sp"
                    android:background="@drawable/rounded_shape_with_green_border"
                    android:gravity="center_vertical"
                    android:paddingStart="15sp"
                    android:paddingEnd="12sp"
                    android:singleLine="true"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/id_expired_date_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="تاريخ إنتهاء بطاقة الهوية"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/id_expired_date_et"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_margin="10sp"
                    android:background="@drawable/rounded_shape_with_green_border"
                    android:gravity="center_vertical"
                    android:paddingStart="15sp"
                    android:paddingEnd="12sp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:text="صور الهوية"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/id_images_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="6"
                    tools:listitem="@layout/id_images_item" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/send_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="30sp"
                        android:layout_marginBottom="50sp"
                        android:background="@drawable/rounded_button"
                        android:paddingStart="50sp"
                        android:paddingEnd="50sp"
                        android:text="إرسال الطلب"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="@android:style/Widget.Holo.Light.ProgressBar"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/main_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>