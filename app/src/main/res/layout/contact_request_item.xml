<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5sp"
    android:layout_marginHorizontal="10sp"
    android:layoutDirection="rtl"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:id="@+id/main_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"
        android:paddingBottom="10sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            app:cardCornerRadius="15sp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_image"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:src="@drawable/profile_image"
                app:civ_border_color="@color/dark_blue"
                app:civ_border_width="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/user_profile_image">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:maxLines="1"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textDirection="rtl"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/date_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="center"
                                android:layout_marginStart="5sp"
                                android:maxLines="1"
                                android:text="-"
                                android:textSize="8sp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5sp"
                        android:paddingBottom="5sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/message_content_type_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="start"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="8sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="start"
                                android:singleLine="true"
                                android:text="  "
                                android:textColor="@color/red"
                                android:textSize="8sp" />

                            <TextView
                                android:id="@+id/message_content_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="start"
                                android:textAlignment="textStart"
                                android:maxLines="2"
                                android:text="-"
                                android:textSize="8sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/go_to_details_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_arrow_forward_white"
                                app:tint="@color/green_for_app" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/if_office_contact_request"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button_dark_blue"
                            android:paddingHorizontal="8sp"
                            android:paddingVertical="2sp"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:text="مكتب عقاري"
                            android:textColor="@color/white"
                            android:textSize="8sp" />

                        <TextView
                            android:id="@+id/if_user_contact_request"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button_green"
                            android:paddingHorizontal="8sp"
                            android:paddingVertical="2sp"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:text="مستخدم"
                            android:textColor="@color/white"
                            android:textSize="8sp" />

                        <RatingBar
                            android:id="@+id/rating_bar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3sp"
                            android:numStars="5"
                            android:rating="4"
                            android:stepSize="1"
                            android:theme="@style/RatingBar" />

                        <TextView
                            android:id="@+id/number_of_reviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3sp"
                            android:layout_marginEnd="3sp"
                            android:ellipsize="end"
                            android:text="-"
                            android:textSize="8sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/status_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/rounded_button_elementary1"
                                android:ellipsize="end"
                                android:paddingStart="10sp"
                                android:paddingEnd="10sp"
                                android:singleLine="true"
                                android:text="-"
                                android:textAlignment="center"
                                android:textColor="@color/red_for_app"
                                android:textSize="8sp" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>