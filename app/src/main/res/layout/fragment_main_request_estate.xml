<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".ui.fragments.requestEstateFragments.MainRequestEstateFragment">

    <LinearLayout
        android:id="@+id/title_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3sp"
        android:orientation="horizontal"
        android:padding="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@drawable/green_circle_bg"
                android:contentDescription="@string/app_name"
                android:foregroundGravity="center"
                android:padding="10sp"
                android:src="@drawable/my_order_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="طلب عقار"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:background="@drawable/rounded_button_red"
                android:paddingStart="15sp"
                android:paddingTop="5sp"
                android:paddingEnd="15sp"
                android:paddingBottom="5sp"
                android:text="مجانا"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/request_estate_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text=" هي خدمة تمكنك من طلب عقار بمواصفات خاصة تصل الى أكثر من _ مكتب مسجل معتمد لدينا في التطبيق"
                android:textAlignment="center"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress_pointer_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7sp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/page_one_node_tv"
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:layout_margin="2sp"
            android:background="@drawable/elementary2_circle_bg"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/page_tow_node_tv"
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:layout_margin="2sp"
            android:background="@drawable/elementary1_circle_bg"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/page_three_node_tv"
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:layout_margin="2sp"
            android:background="@drawable/elementary1_circle_bg"
            android:contentDescription="@string/app_name"
            android:textSize="10sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/page_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="@string/first_step"
        android:textAlignment="center"
        android:textColor="@color/green_for_app"
        android:textSize="12sp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/child_fragment_container_request_estate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>

