<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="10sp"
        android:background="@drawable/round_blue_shap_with_white_border"
        android:paddingStart="15sp"
        android:paddingEnd="15sp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_category_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <ImageView
                android:layout_width="8sp"
                android:layout_height="8sp"
                android:layout_gravity="center"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:src="@drawable/ic_arrow_forward_white" />

            <TextView
                android:id="@+id/contract_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <ImageView
                android:layout_width="8sp"
                android:layout_height="8sp"
                android:layout_gravity="center"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:src="@drawable/ic_arrow_forward_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:text="الرقم"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <ImageView
                android:layout_width="8sp"
                android:layout_height="8sp"
                android:layout_gravity="center"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:src="@drawable/ic_arrow_forward_white" />

            <TextView
                android:id="@+id/id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="7sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/created_at_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="7sp" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="4sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="4sp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="15sp">

        <LinearLayout
            android:id="@+id/add_estate_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="8sp">

            <RelativeLayout
                android:layout_width="129sp"
                android:layout_height="129sp"
                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/estate_iv"
                    android:layout_width="129sp"
                    android:layout_height="129sp"
                    android:contentDescription="@string/app_name"
                    android:foregroundGravity="center"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="10sp" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/estate_temp_iv"
                    android:layout_width="129sp"
                    android:layout_height="129sp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/app_name"
                    android:foregroundGravity="center"
                    android:scaleType="fitXY"
                    android:src="@color/elementary1"
                    app:riv_corner_radius="10sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="7sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="فيلا سكنية للبيع كاش"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/price_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="2sp"
                                android:text="-"
                                android:textColor="@color/green_for_app"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="2sp"
                                android:layout_marginEnd="2sp"
                                android:text="ريال"
                                android:textColor="@color/green_for_app"
                                android:textSize="10sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="?actionBarSize"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:id="@+id/more_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="5sp"
                            android:layout_marginEnd="5sp"
                            android:background="@drawable/ic_green_more_horiz"
                            android:textSize="10sp" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="2sp"
                        android:background="@drawable/as_map_icon"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/city_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="2sp"
                        android:layout_marginEnd="2sp"
                        android:text="-"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="2sp"
                        android:textColor="@color/dark_blue"
                        android:text="-"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/area_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="2sp"
                        android:layout_marginEnd="2sp"
                        android:text="-"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/description_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="2sp"
                    android:paddingStart="2sp"
                    android:paddingEnd="2sp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="-"
                    android:textSize="8sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/property_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/properties_item"

                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>