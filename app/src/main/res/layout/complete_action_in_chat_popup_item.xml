<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="15sp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/action_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5sp">

        <ImageView
            android:id="@+id/saaei_logo_iv"
            android:layout_width="58sp"
            android:layout_height="24sp"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:layout_marginTop="17sp"
            android:layout_marginEnd="5sp"
            android:background="@drawable/splash_logo"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/chat_action_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:text="--"
            android:textAlignment="center"
            android:textColor="@color/dark_blue" />

        <RatingBar
            android:id="@+id/add_rating_rb_item"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15sp"
            android:isIndicator="false"
            android:progressBackgroundTint="@color/elementary"
            android:progressTint="@color/yellowActivated"
            android:rating="0"
            android:saveEnabled="true"
            android:stepSize="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/add_a_comment_et_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100sp"
                android:layout_marginStart="30sp"
                android:layout_marginTop="7sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/rounded_10_button_elementary1"
                android:gravity="top"
                android:hint="تعليق"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:padding="10sp"
                android:textAlignment="textStart"
                android:textSize="10sp"
                tools:ignore="RtlCompat" />

            <ProgressBar
                android:id="@+id/action_pb_item"
                style="@android:style/Widget.Holo.Light.ProgressBar"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_centerInParent="true"
                android:layout_marginStart="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginBottom="5sp"
                android:visibility="invisible"
                tools:visibility="visible" />

        </RelativeLayout>

        <EditText
            android:id="@+id/add_a_reason_et_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60sp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="30sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/rounded_10_button_elementary1"
            android:gravity="top"
            android:hint="سبب الإغلاق"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:padding="10sp"
            android:textAlignment="textStart"
            android:textSize="10sp"
            android:visibility="gone"
            tools:ignore="RtlCompat"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/submit_action_btn_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:background="@drawable/rounded_green_shap_with_elementary_fill"
            android:paddingVertical="10sp"
            android:text="إرسال"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/green_for_app" />

    </LinearLayout>

</ScrollView>