<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="15sp">

        <LinearLayout
            android:id="@+id/add_estate_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
             >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/announcement_iv"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:background="@color/elementary1"
                android:contentDescription="@string/app_name"
                android:foregroundGravity="center"
                android:scaleType="fitXY"
                app:riv_corner_radius="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/announcement_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3sp"
                    android:maxLines="1"
                    android:text="---"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/announcement_description_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="---"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/announcement_link_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3sp"
                    android:textColor="@color/green_for_app"
                    android:maxLines="1"
                    android:text="---"
                    android:textSize="8sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>