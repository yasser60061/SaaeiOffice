<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    tools:context=".ui.fragments.requestEstateFragments.RequestEstatePage3Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="15sp"
            android:layout_marginBottom="4sp"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:text="معلومات طلب العقار"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="7sp"
            android:background="@color/elementary1"
            android:orientation="horizontal"
            android:paddingStart="5sp"
            android:paddingTop="10sp"
            android:paddingEnd="5sp"
            android:paddingBottom="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7sp"
                android:maxLines="5"
                android:text="المدينة :"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/city_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="7sp"
            android:background="@color/elementary1"
            android:orientation="horizontal"
            android:paddingStart="5sp"
            android:paddingTop="10sp"
            android:paddingEnd="5sp"
            android:paddingBottom="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7sp"
                android:text="الأحياء المحتملة للعقار :"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/neighborhood_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="7sp"
            android:background="@color/elementary1"
            android:orientation="horizontal"
            android:paddingStart="5sp"
            android:paddingTop="10sp"
            android:paddingEnd="5sp"
            android:paddingBottom="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7sp"
                android:text="نوع العقار الرئيسي :"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/main_category_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="7sp"
            android:background="@color/elementary1"
            android:orientation="horizontal"
            android:paddingStart="5sp"
            android:paddingTop="10sp"
            android:paddingEnd="5sp"
            android:paddingBottom="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7sp"
                android:text="نوع العقار الفرعي :"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sub_category_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="7sp"
            android:background="@color/elementary1"
            android:orientation="horizontal"
            android:paddingStart="5sp"
            android:paddingTop="10sp"
            android:paddingEnd="5sp"
            android:paddingBottom="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7sp"
                android:text="نوع العقد:"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/type_of_contract_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="7sp"
            android:background="@color/elementary1"
            android:orientation="horizontal"
            android:paddingStart="5sp"
            android:paddingTop="10sp"
            android:paddingEnd="5sp"
            android:paddingBottom="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7sp"
                android:text="مساحة العقار:"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/real_estate_aria_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="7sp"
            android:background="@color/elementary1"
            android:orientation="horizontal"
            android:paddingStart="5sp"
            android:paddingTop="10sp"
            android:paddingEnd="5sp"
            android:paddingBottom="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7sp"
                android:text="المواصفات الرئيسية :"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sub_property_specifications_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="7sp"
            android:background="@color/elementary1"
            android:orientation="horizontal"
            android:paddingStart="5sp"
            android:paddingTop="10sp"
            android:paddingEnd="5sp"
            android:paddingBottom="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7sp"
                android:text="المواصفات الفرعية:"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/features_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="7sp"
            android:background="@color/elementary1"
            android:orientation="horizontal"
            android:paddingStart="5sp"
            android:paddingTop="10sp"
            android:paddingEnd="5sp"
            android:paddingBottom="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7sp"
                android:text="معلومات إضافية:"
                android:textSize="10sp" />

        <TextView
            android:id="@+id/mor_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/do_you_need_installment_iv"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:background="@drawable/elementary1_circle_bg" />

            <TextView
                android:id="@+id/do_you_need_installment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:text="@string/do_you_need_installment"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/allow_communication_via_iv"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:layout_marginStart="30sp"
                android:background="@drawable/elementary1_circle_bg" />

            <TextView
                android:id="@+id/allow_communication_via_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:text="@string/allow_communication_via_phone"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/previous_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layoutDirection="ltr"
                android:layout_margin="15sp"
                android:background="@drawable/rounded_shape_with_green_border"
                android:text="السابق"
                android:textAllCaps="false"
                android:textSize="14sp" />

            <Button
                android:id="@+id/sent_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="15sp"
                android:background="@drawable/rounded_shape_with_green_border"
                android:text="ارسال الطلب"
                android:textAllCaps="false"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>